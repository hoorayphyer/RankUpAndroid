<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/player_image_vertical"
        android:layout_width="@dimen/player_image_width"
        android:layout_height="@dimen/player_image_height"
        app:layout_constraintBottom_toTopOf="@+id/player_name_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/player_name_vertical"
        android:layout_width="@dimen/player_image_width"
        android:layout_height="@dimen/vertical_player_name_height"
        android:text="@string/unknown_player_name_str"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_image_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>
